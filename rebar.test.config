% -*- Erlang -*-
%% vim: ts=4 sw=4 et ft=erlang

{lib_dirs,["deps"]}.
{src_dirs, ["src", "test"]}.
{erl_opts, [debug_info, fail_on_warning]}.
{cover_enabled, true}.
{xref_checks, [undefined_function_calls]}.

{deps, [
	{mimetypes,      ".*", {git, "git://github.com/spawngrid/mimetypes",   {branch, master}}},
	{pmod_transform, ".*", {git, "git://github.com/erlang/pmod_transform", {branch, master}}},
    {cowboy,         ".*", {git, "git://github.com/extend/cowboy",         {tag, "0.8.6"}}},
    {gun,            ".*", {git, "git://github.com/extend/gun",            {branch, master}}},
    {proper,         ".*", {git, "https://github.com/manopapad/proper",    {branch, "master"}}}
]}.
